@model TEST1.Models.ViewModels.ProductFilterViewModel

@{
    ViewData["Title"] = "Ürün Listesi";
}

<h2>Ürün Listesi</h2>

<a asp-controller="products" asp-action="create" class="btn btn-success" style="margin-bottom:5px">Yeni</a>
<br />
<form method="get" class="row g-3 mb-4">
    <div class="col-md-4">
        <input type="text" name="title" value="@Model.Title" class="form-control" placeholder="Başlığa göre ara..." />
    </div>

    <div class="col-md-3">
        <select name="categoryId" class="form-select">
            <option value="0">Tüm Kategoriler</option>
            @foreach (var cat in Model.Categories)
            {
                if (Model.CategoryId == cat.Id)
                {
                    <option value="@cat.Id" selected>@cat.Name</option>
                }
                else
                {
                    <option value="@cat.Id">@cat.Name</option>
                }
            }
        </select>
    </div>

    <div class="col-md-3">
        <select name="isPublished" class="form-select">
            <option value="">Tüm Yayın Durumları</option>
            @if (Model.IsPublished == true)
            {
                <option value="true" selected>Yayında</option>
                <option value="false">Yayında Değil</option>
            }
            else if (Model.IsPublished == false)
            {
                <option value="true">Yayında</option>
                <option value="false" selected>Yayında Değil</option>
            }
            else
            {
                <option value="true">Yayında</option>
                <option value="false">Yayında Değil</option>
            }
        </select>
    </div>

    <div class="col-md-2">
        <button type="submit" class="btn btn-primary w-100">Filtrele</button>
    </div>
</form>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Başlık</th>
            <th>Kategori</th>
            <th>Stok</th>
            <th>Yayın Durumu</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.Products)
        {
            <tr>
                <td>@product.Title</td>
                <td>@product.Category?.Name</td>
                <td>@product.Stock</td>
                <td>@(product.IsPublished ? "Yayında" : "Değil")</td>
                <td> <a asp-controller="products" asp-action="edit" asp-route-id="@product.Id" class="btn btn-warning">Düzenle</a> </td>
                <td> <a asp-controller="products" asp-action="delete" asp-route-id="@product.Id" class="btn btn-danger">Sil</a> </td>
            </tr>
        }
    </tbody>
</table>
